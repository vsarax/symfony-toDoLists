{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <header>
        <h1>Register</h1>
    </header>
    <main class="form">
        {% block content %}
            <div class="form-background">
                {{ form_start(registrationForm) }}
                    <div class="form-group">
                        <label for="{{ registrationForm.email.vars.id }}" class="form-label">Email</label>
                        {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'form-input'
                        } 
                        }) }}
                    </div>
                    <div class="form-group">
                        <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">Password</label>
                        {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'form-input'
                        }       
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {
                            'class': 'form-checkbox'
                        }   
                        }) }}
                        <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-checkbox-label">Agree to Terms</label>
                    </div>
                    <div class="button-submit-container">
                        <button class="button" type="submit">Register</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        {% endblock %}
    </main>
{% endblock %}
